root = true

[*{.py, .html, .js, .ts, .css, .scss, .vue, .json, .md}]
charset = utf-8
indent_style = space

[*.py]
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf

[*{.html, .htm, .vue}]
indent_size=2
trim_trailing_whitespace=true
end_of_line = lf

[*{.js, .ts}]
indent_size=2
trim_trailing_whitespace=true
end_of_line = lf

[*{.css, .scss, .pcss}]
indent_size=4
trim_trailing_whitespace=true

[*.json]
indent_size=2
trim_trailing_whitespace=true
